<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:statusBarBackground="#54476B"
    tools:context=".DeveloperDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/iconcolor"
            app:title="@string/artist_name"
            app:navigationIcon="@drawable/dd"
            android:clickable="true"
            app:popupTheme="@style/AppTheme.AppBarOverlay"
            android:focusable="true" />

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_gravity="fill_vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalScrollbarPosition="defaultPosition"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/border"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:ignore="UnusedAttribute">
                <TextView
                    android:text="Details"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="casual"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textAlignment="center" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="Publisher Name     "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textAlignment="center"
                         android:layout_height="wrap_content" android:layout_width="200dp"/>

                    <TextView
                        android:text="@string/artist_name"
                        android:textAlignment="center"
                        android:padding="10dp"
                          android:layout_height="wrap_content" android:layout_width="200dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="About Publisher   "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ps"
                        android:padding="5dp"
                        style="@style/Widget.AppCompat.Button"
                        android:onClick="getplayUrlFromIntent"
                        android:id="@+id/ic_ps"/>
                    <TextView
                        android:layout_column="2"
                        android:text="App and Game "
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                </LinearLayout>
                </LinearLayout>



                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Application Name   "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                    <TextView
                        android:layout_column="2"
                        android:text="Redactor VE "
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="About Application   "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_column="2"
                        android:text="This is a basic video editor. We have many video editor tools, you can select photos and video from your gallery, and itâ€™s totally free, without watermark. "
                        android:textAlignment="textStart"
                        android:padding="10dp"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Founder/Developer   "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                    <TextView
                        android:text="Vikram Singh"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:layout_height="wrap_content" android:layout_width="200dp"
                        />
                </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="About Founder/Developer"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content" android:layout_width="200dp"
                            />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_horizontal"
                           >
                           <ImageButton
                               android:id="@+id/ic_yt"
                               android:layout_width="50dp"
                               android:layout_height="50dp"
                               android:padding="5dp"
                               android:onClick="getytUrlFromIntent"
                               style="@style/Widget.AppCompat.Button"
                               android:src="@mipmap/yt"/>
                           <ImageButton
                               android:layout_width="50dp"
                               android:layout_height="50dp"
                               android:src="@mipmap/fb"
                               android:padding="5dp"
                               android:onClick="getfbUrlFromIntent"
                               style="@style/Widget.AppCompat.Button"
                               android:id="@+id/ic_fb"/>
                           <ImageButton
                               android:layout_width="50dp"
                               android:layout_height="50dp"
                               android:src="@mipmap/gh"
                               android:padding="5dp"
                               android:onClick="getgitUrlFromIntent"
                               style="@style/Widget.AppCompat.Button"
                               android:id="@+id/ic_gh"/>
                           <ImageButton
                               android:layout_width="50dp"
                               android:layout_height="50dp"
                               android:src="@mipmap/insta"
                               android:padding="5dp"
                               android:onClick="getinstaUrlFromIntent"
                               style="@style/Widget.AppCompat.Button"
                               android:id="@+id/ic_insta"/>
                           <ImageButton
                               android:layout_width="50dp"
                               android:layout_height="50dp"
                               android:src="@mipmap/twit"
                               android:padding="5dp"
                               android:onClick="gettwitUrlFromIntent"
                               style="@style/Widget.AppCompat.Button"
                               android:id="@+id/ic_twit"/>

                       </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>